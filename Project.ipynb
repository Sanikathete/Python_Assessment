        "class CollegeBill:\n",
        "    def __init__(self):\n",
        "        self.subject=\"\"\n",
        "        self.analytics=\"N\"\n",
        "        self.hostel=\"N\"\n",
        "        self.food_months=0\n",
        "        self.transport=\"\"\n",
        "        self.total=0\n",
        "\n",
        "    def getdata(self):\n",
        "        try:\n",
        "            self.subject=input(\"Enter subject (HR/Finance/Marketing/DS): \")\n",
        "            if self.subject!=\"DS\":\n",
        "                self.analytics=input(\"Analytics Y/N: \").upper()\n",
        "            else:\n",
        "                self.analytics=\"N\"\n",
        "\n",
        "            self.hostel=input(\"Hostel Y/N: \").upper()\n",
        "            self.food_months=int(input(\"Food months: \"))\n",
        "            self.transport=input(\"Transport (semester/annual): \").lower()\n",
        "        except:\n",
        "            print(\"Invalid input\")\n",
        "\n",
        "    def calculate(self):\n",
        "        course_fee=200000\n",
        "\n",
        "        if self.analytics==\"Y\":\n",
        "            course_fee=course_fee+(200000*0.10)\n",
        "\n",
        "        hostel_fee=0\n",
        "        if self.hostel==\"Y\":\n",
        "            hostel_fee=200000\n",
        "\n",
        "        food_cost=self.food_months*2000\n",
        "\n",
        "        if self.transport==\"semester\":\n",
        "            transport_cost=13000\n",
        "        elif self.transport==\"annual\":\n",
        "            transport_cost=26000\n",
        "        else:\n",
        "            transport_cost=0\n",
        "\n",
        "        self.total=course_fee+hostel_fee+food_cost+transport_cost\n",
        "\n",
        "        self.course_fee=course_fee\n",
        "        self.hostel_fee=hostel_fee\n",
        "        self.food_cost=food_cost\n",
        "        self.transport_cost=transport_cost\n",
        "\n",
        "    def showbill(self):\n",
        "        print(\"=\"*60)\n",
        "        print(\" \" * 20 + \"COLLEGE BILL\")\n",
        "        print(\"=\"*60)\n",
        "        print(f\"{'Item':25}{'Details':15}{'Amount':>10}\")\n",
        "        print(\"-\"*60)\n",
        "        print(f\"{'Course Fee':25}{self.subject:15}{int(self.course_fee):>10}\")\n",
        "        print(f\"{'Analytics':25}{self.analytics:15}{int(self.course_fee*0.10 if self.analytics=='Y' else 0):>10}\")\n",
        "        print(f\"{'Hostel':25}{self.hostel:15}{int(self.hostel_fee):>10}\")\n",
        "        print(f\"{'Food':25}{str(self.food_months)+' months':15}{int(self.food_cost):>10}\")\n",
        "        print(f\"{'Transport':25}{self.transport:15}{int(self.transport_cost):>10}\")\n",
        "        print(\"-\"*60)\n",
        "        print(f\"{'TOTAL':40}{int(self.total):>10}\")\n",
        "        print(\"=\"*60)\n",
        "\n",
        "c=CollegeBill()\n",
        "c.getdata()\n",
        "c.calculate()\n",
        "c.showbill()\n"
      ],
